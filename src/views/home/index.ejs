            if(subtitleMobile) subtitleMobile.textContent = salaSelecionada.nome
            if(inputControladorIdMobile) inputControladorIdMobile.value = salaSelecionada.ares_condicionados[0].controlador.macAddress
            if(switchMobile1) switchMobile1.checked = false
            if(rangeMobile1) {
