            }
            if(dotMobile1) {
                const anguloInicial = 120
                dotMobile1.style.transform = `rotate(${anguloInicial}deg)`
            }
        }

        divSeletor1.style.cssText = "display: flex !important"
        if(divSeletorMobile1) {
