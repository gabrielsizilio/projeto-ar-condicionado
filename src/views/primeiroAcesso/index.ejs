<!DOCTYPE html>
<html lang="pt-br">
<%- include('../partials/header.ejs')%>

<body class="container-body row">

    <div class="d-flex align-items-center justify-content-center mt-3">
        <div class="card p-4">
            <h2 class="text-center">Primeiro Acesso</h2>
            <p class="text-center">Este é o seu primeiro acesso para a geração da senha para o sistema</p>

            <form class="form-group mt-2" action="/firstAccess/<%= user.credencial.email %>" method="post">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-column">
                        <label for="senha">Digite senha</label>
                        <input oninput="liberaConfirmacao()" class="rounded p-1" type="password" name="novaSenha" id="senha" required>
                    </div>
                    <div class="d-flex flex-column">
                        <label for="confirmaSenha">Confirmar senha</label>
                        <input oninput="comparaSenhas()" class="rounded p-1" type="password" name="confirmaSenha" id="confirmaSenha" disabled required>
                    </div>
                </div>
                <p class="fs-7">Digite uma senha de 04 a 08 caracteres</p>
                <div class="d-flex justify-content-center mt-4">
                    <button id="enviaSenha" type="submit" class="btn" disabled>Cadastrar Senha</button>
                </div>
            </form>
        </div>
    </div>

    <div class="footer"></div>
       
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <script>
        function liberaConfirmacao(){
            let senha = document.getElementById("senha").value;
            let confirmaSenha = document.getElementById('confirmaSenha')
            if(senha.length > 0){
                confirmaSenha.removeAttribute('disabled')
            }
            comparaSenhas()
        }
        function comparaSenhas(){
            let senha = document.getElementById("senha").value;
            let confirmaSenha = document.getElementById("confirmaSenha").value;
            console.log(senha)
            console.log(confirmaSenha)
            if(senha.length > 0 && senha == confirmaSenha){ 
                document.getElementById('enviaSenha').removeAttribute('disabled')
            }else{
                document.getElementById('enviaSenha').setAttribute('disabled', '')
            }
        }
    </script>


</body>
</html>